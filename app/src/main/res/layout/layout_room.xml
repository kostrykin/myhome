<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_fullscreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/space_horizontal_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/room_name"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_horizontal_medium"
            android:text="@string/dummy_room1"
            android:textColor="@color/foreground3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <LinearLayout
            android:id="@+id/room_scenes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/room_scene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_room1_scene_cozy" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/room_alloff_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_power_off" />
    </LinearLayout>

</FrameLayout>